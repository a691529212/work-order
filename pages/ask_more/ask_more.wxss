/* pages/ask_more/ask_more.wxss */

.page {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
}

.content {
  width: 700rpx;
  height: 300rpx;
  background: #fff;
  border: 1rpx solid #f5f5f5;
  padding: 10rpx;
}

.horizontal_layout {
  display: flex;
  width: 750rpx;
  padding: 15rpx;
  justify-content: space-between;
  align-items: center;
}

.img_view {
  display: inline-block;
  justify-content: flex-start;
  flex-direction: column;
  align-content: flex-start;
  border-bottom: 2rpx solid #f2f2f2;
  margin-bottom: 20rpx;
  width: 750rpx;
}

.title {
  color: #727272;
  font-size: 28rpx;
  justify-content: center;
  align-content: center;
  margin-left: 20rpx;
}

.photo {
  width: 200rpx;
  height: 200rpx;
  margin: 25rpx;
}

.corfim {
  width: 624rpx;
  height: 100rpx;
  padding: 15rpx;
  font-size: 34rpx;
  justify-content: center;
  align-content: center;
  line-height: 100rpx;
  align-items: center;
  text-align: center;
  border-radius: 10rpx;
  background: #2196f3;
  color: #fff;
  margin-top: 110rpx;
}
