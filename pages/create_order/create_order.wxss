/* pages/create_order/create_order.wxss */

.bottom_layout {
  position: fixed;
  bottom: 0rpx;
  height: 120rpx;
  align-items: center;
  width: 750rpx;
  border-top: 1rpx solid #bbb;
  background: #fff;
  display: flex;
  justify-content: space-around;
}

.horizontal {
  display: flex;
  width: 750rpx;
  padding: 15rpx;
  border-bottom: 10rpx solid #f7f7f7;
  border-top: 20rpx solid #f7f7f7;
  justify-content: space-between;
  align-items: center;
}

.horizontal_layout {
  display: flex;
  width: 750rpx;
  padding: 15rpx;
  justify-content: space-between;
  align-items: center;
}

.img_view {
  display: inline-block;
  justify-content: flex-start;
  flex-direction: column;
  align-content: flex-start;
  border-bottom: 2rpx solid #f7f7f7;
  margin-bottom: 20rpx;
  width: 750rpx;
}

.photo {
  width: 200rpx;
  height: 200rpx;
  margin: 25rpx;
}

.title {
  color: #444;
  font-size: 28rpx;
  justify-content: center;
  align-content: center;
  margin-left: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.info_text {
  color: #444;
  font-size: 28rpx;
  justify-content: center;
  align-content: center;
  text-align: start;
}

.right_arrows {
  width: 15rpx;
  height: 28rpx;
  margin-right: 20rpx;
}

.confrim {
  margin-bottom: 150rpx;
  width: 624rpx;
  margin-top: 30rpx;
  background: #2196f3;
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  justify-content: center;
  align-content: center;
  text-align: center;
  border-radius: 10rpx;
}
